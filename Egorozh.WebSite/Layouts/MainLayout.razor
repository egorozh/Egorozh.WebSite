@inherits LayoutComponentBase

@inject NavigationManager _navigation

<Grid Height="100vh"
      RowDefinitions="auto * auto"
      ColumnDefinitions="auto * auto"
      ItemGap="14px">

    <GridChild Row="1" RowSpan="2"
               Column="1">
        <AboutLink/>
    </GridChild>

    <GridChild Row="1"
               Column="2">
        <ProjectsLink/>
    </GridChild>

    <GridChild Row="3"
               Column="2">
        <ContactsLink/>
    </GridChild>

    <GridChild Row="2" RowSpan="2"
               Column="3">
        <HobbyLink/>
    </GridChild>

    <GridChild Row="1"
               Column="3">
        <YoutubeLink/>
    </GridChild>

    <GridChild Row="3"
               Column="1">
        <GithubLink/>
    </GridChild>

    <GridChild Row="2"
               Column="2">
        <Grid RowDefinitions="* auto *"
              ColumnDefinitions="* auto *">
            <GridChild Row="2"
                       Column="2">
                @Body
            </GridChild>
        </Grid>
    </GridChild>

</Grid>